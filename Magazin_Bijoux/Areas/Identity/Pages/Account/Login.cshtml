@page
@model LoginModel

@{
    ViewData["Title"] = "Log in"@*"Logare"*@;
}

<div class="row" style="display: flex;justify-content: center;flex-direction: column;align-items: center;">
    <h1>@ViewData["Title"]</h1>
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.@*Utilizați contul local pentru a logina.*@</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group" >
                    <p>
                        <a id="forgot-password" class="standart_black" asp-page="./ForgotPassword">Forgot your password?@*Ai pierdut parola?*@</a>
                    </p>
                    <p>
                        <a asp-page="./Register" class="standart_black"  asp-route-returnUrl="@Model.ReturnUrl">Register as a new user.@*Registrează un utilizator nou.*@</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
