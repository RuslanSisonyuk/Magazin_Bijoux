@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>
    .no-padding{
        padding: 0px;
    }
</style>
@if (SignInManager.IsSignedIn(User))
{
        <a  class="nav-link no-padding" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@localizer["profile"]</a>
        <form  class="form-inline logout" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link white_link no-padding">Logout</button>
        </form>
}
else
{
@*        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>*@
        <a class="nav-link text-light white_link no-padding" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
